<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.primerosauxilios.udec.appprimerosauxilios.vista.activities.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnMedidasGenerales"
        android:id="@+id/btnMedidasGenerales"
        android:onClick="medidasGenerales"
        />
    <android.support.v7.widget.SearchView
        android:elevation="2dp"
        android:background="#fff"
        android:id="@+id/simpleSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="@string/search_hint"
        android:layout_below="@+id/btnMedidasGenerales">
        <requestFocus/>
    </android.support.v7.widget.SearchView>


    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.primerosauxilios.udec.appprimerosauxilios.vista.fragmentos.FragmentoResultados"
        android:id="@+id/fragmentoResultados"
        android:layout_alignParentBottom="true"
        class="com.primerosauxilios.udec.appprimerosauxilios.vista.fragmentos.FragmentoResultados"
        tools:layout="@layout/fragmento_resultados"/>
</RelativeLayout>
